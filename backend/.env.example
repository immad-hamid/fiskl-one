# Database
DATABASE_URL="postgresql://username:password@localhost:5432/invoice_db?schema=public"

# Server
PORT=3000
NODE_ENV=development

# Third Party API
THIRD_PARTY_API_URL=https://api.example.com/webhooks/invoice
THIRD_PARTY_API_KEY=your_api_key_here

# Company Info (can be overridden per user)
COMPANY_NAME="Your Company Name"
COMPANY_ADDRESS="123 Your Street, City, State 12345"
COMPANY_PHONE="(555) 123-4567"

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100